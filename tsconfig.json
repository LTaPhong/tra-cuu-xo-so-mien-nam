{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "node", // Hoặc "bundler" nếu Vite/TS của bạn mới hơn
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "types": ["vite/client"] // Quan trọng: Thêm dòng này
  },
  "include": ["src", "./*.ts", "./*.tsx", "components/**/*.ts", "components/**/*.tsx", "services/**/*.ts"], // Điều chỉnh cho phù hợp với cấu trúc thư mục
}